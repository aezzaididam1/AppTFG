<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/black">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ccTrip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        android:background="?attr/colorOnPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_grey">

            <!-- Título del diálogo -->
            <TextView
                android:id="@+id/tvHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Plantillas de hábitos"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@id/tvHeader"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        android:padding="16dp">

                    <!-- Sección para Crear un Hábito Personalizado -->
                    <TextView
                        android:id="@+id/tvCrearHabitoPersonalizado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Crear un hábito personalizado"
                        android:padding="16dp"
                        android:background="@color/white"
                        android:clickable="true"
                        android:focusable="true"/>
                    </androidx.cardview.widget.CardView>

                    <!-- Separador -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"
                        android:layout_marginVertical="8dp"/>

                    <!-- Título de la sección -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Más Populares"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:layout_marginBottom="8dp"/>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        android:padding="16dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <!-- Elementos de la lista de hábitos populares -->
                            <TextView
                                android:id="@+id/tvDucharseConAguaFria"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ducharse con agua fría"
                                android:padding="16dp"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"/>
                            <TextView
                                android:id="@+id/tvComerSano"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Coma una comida sana"
                                android:padding="16dp"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"/>
                            <TextView
                                android:id="@+id/tvHagaSuCama"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Haga su cama"
                                android:padding="16dp"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"/>

                            <TextView
                                android:id="@+id/tvSalirPasear"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Salir a pasear"
                                android:padding="16dp"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"/>

                            <TextView
                                android:id="@+id/tvMeditar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Meditar"
                                android:padding="16dp"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"/>

                            <TextView
                                android:id="@+id/tvLeerLibro"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Leer un libro"
                                android:padding="16dp"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Separador -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"
                        android:layout_marginVertical="8dp"/>
                    <!-- Título de la sección -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BIENESTAR MENTAL"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:layout_marginBottom="8dp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        android:padding="16dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <!-- Elementos de la lista de hábitos populares -->
                            <TextView
                                android:id="@+id/tvDucharseConAguaFria1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ducharse con agua fría"
                                android:padding="16dp"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"/>
                            <TextView
                                android:id="@+id/tvComerSano2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Coma una comida sana"
                                android:padding="16dp"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"/>
                            <TextView
                                android:id="@+id/tvHagaSuCama3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Haga su cama"
                                android:padding="16dp"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"/>

                            <TextView
                                android:id="@+id/tvSalirPasear4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Salir a pasear"
                                android:padding="16dp"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"/>

                            <TextView
                                android:id="@+id/tvMeditar5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Meditar"
                                android:padding="16dp"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"/>

                            <TextView
                                android:id="@+id/tvLeerLibro6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Leer un libro"
                                android:padding="16dp"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </ScrollView>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
